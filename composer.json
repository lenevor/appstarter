		"source": "https://github.com/lenevor"
	},
	"authors": [
		{
			"name": "Javier Alexander Campo M.",
			"email": "jalexcam@gmail.com"
		}
	],
	"require": {
		"php": "^7.3",
		"lenevor/syscodes": "^0.7.0"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.dist', '.env');\""
        ],
        "post-update-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.dist', '.env');\"" 
        ]
    }
}
